{
  "name": "trainings-api-hub",
  "version": "1.0.0",
  "description": "API Sandbox - On-demand REST API environments for frontend development training",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:dummy-api\"",
    "dev:backend": "npm run dev --workspace=packages/main-backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:dummy-api": "npm run dev --workspace=packages/dummy-api",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/trainings-api-hub.git"
  },
  "keywords": [
    "api",
    "sandbox",
    "training",
    "docker",
    "typescript",
    "express",
    "angular"
  ],
  "author": "Your Name",
  "license": "MIT"
}
