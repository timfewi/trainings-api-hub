# Main Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Frontend URL for CORS
FRONTEND_URL=http://localhost:4200

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/trainings_api_hub?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DUMMY_API_IMAGE=trainings-api-hub/dummy-api:latest
DUMMY_API_PORT_RANGE_START=8000
DUMMY_API_PORT_RANGE_END=9000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
